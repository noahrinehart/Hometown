<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.boilermakeproject.hometown.AddContact">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/contact_image"
        android:src="@drawable/ic_account_box_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/contact_name"
        android:layout_below="@+id/contact_image"
        android:layout_alignLeft="@+id/contact_image"
        android:layout_alignStart="@+id/contact_image" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hometown_add"
        android:layout_below="@+id/contact_name"
        android:layout_alignRight="@+id/contact_name"
        android:layout_alignEnd="@+id/contact_name"
        android:layout_alignLeft="@+id/contact_name"
        android:layout_alignStart="@+id/contact_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/contact_phone"
        android:layout_below="@+id/hometown_add"
        android:layout_alignLeft="@+id/hometown_add"
        android:layout_alignStart="@+id/hometown_add" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/contact_note"
        android:layout_below="@+id/contact_phone"
        android:layout_alignLeft="@+id/contact_phone"
        android:layout_alignStart="@+id/contact_phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_contact"
        android:layout_below="@+id/contact_note"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_contact"
        android:layout_below="@+id/save_contact"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:paddingTop="10dp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/contact_name"
        android:layout_toLeftOf="@+id/contact_name"
        android:layout_toStartOf="@+id/contact_name"
        android:layout_above="@+id/hometown_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hometown"
        android:id="@+id/textView3"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/contact_name"
        android:layout_toStartOf="@+id/contact_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Phone"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/contact_phone"
        android:layout_toLeftOf="@+id/contact_phone"
        android:layout_toStartOf="@+id/contact_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note"
        android:paddingTop="10dp"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/contact_note"
        android:layout_toLeftOf="@+id/contact_note"
        android:layout_toStartOf="@+id/contact_note" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Places"
        android:id="@+id/places_auto"
        android:layout_below="@+id/save_contact"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
